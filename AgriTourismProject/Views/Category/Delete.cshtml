@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">Place Name</label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Location" class="p-0">Location</label>
            <input asp-for="Location" disabled class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Cost" class="p-0">Cost</label>
            <input asp-for="Cost" disabled class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Capacity" class="p-0">Capacity</label>
            <input asp-for="Capacity" disabled class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Date" class="p-0">Date</label>
            <input asp-for="Date" disabled class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Record</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
