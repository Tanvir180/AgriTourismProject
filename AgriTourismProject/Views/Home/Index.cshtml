@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid p-5 bg-light text-center">
    <h1 class="display-4 text-primary">Welcome to AgriTourism</h1>
    <p class="lead">Explore the best places and experiences with us.
    Your gateway to unforgettable agri-tourism experiences.</p>
</div>





@model List<Category>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <h2 class="text-center text-primary mb-4">Find Your Visiting Sites</h2>

    <div class="row justify-content-center">
        @if (Model != null && Model.Any())
        {
            @foreach (var category in Model.OrderBy(c => c.Id))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex align-items-stretch">
                    <div class="card h-100 shadow-sm text-center" style="border-radius: 15px; background-color: #f8f9fa;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title text-dark mb-3">@category.Name</h5>
                            <h6 class="card-subtitle text-muted mb-2">@category.Location</h6>
                            <p class="card-text text-secondary">
                                <strong>Cost:</strong> @category.Cost<br />
                                <strong>Capacity:</strong> @category.Capacity<br />
                                <strong>Date:</strong> @category.Date.ToString("yyyy-MM-dd")
                            </p>
                            <div class="mt-auto">
                                <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm mx-1 my-2">
                                    <i class="bi bi-eye-fill"></i> View Details
                                </a>
                                <a asp-controller="Category" asp-action="Payment" asp-route-id="@category.Id" class="btn btn-success btn-sm mx-1 my-2">
                                    <i class="bi bi-calendar-check"></i> Book Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center mt-4" role="alert">
                No categories available.
            </div>
        }
    </div>
</div>
